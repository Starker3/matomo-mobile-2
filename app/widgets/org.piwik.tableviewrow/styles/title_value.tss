"TableViewRow": {
    height: Ti.UI.SIZE
},

"#title": {
    textAlign: Ti.UI.TEXT_ALIGNMENT_LEFT,
    width: Ti.UI.SIZE,
    height: Ti.UI.SIZE,
    left: 10,
    color: '#212121',
    ellipsize: true,
    maxLines: 1,
    font: {fontSize: 18, fontWeight: 'bold'},
    top: 11,
    bottom: 11,
    touchEnabled: false
},

"#title[platform=ios]": {
    left: 15,
    font: {fontSize: 18, fontWeight: 'normal'},
}

"#title[platform=ios formFactor=tablet]": {
    top: 12,
    bottom: 12,
}

"#title[platform=android]": {
    left: '16dp',
    right: '16dp',
    top: '10dp',
    font: {fontSize: '16sp', fontWeight: 'normal'},
    zIndex: 2,
    bottom: '11dp'
},

"#value": {
    right: 10,
    font: {fontSize: 18},
    textAlign: Ti.UI.TEXT_ALIGNMENT_RIGHT,
    width: Ti.UI.SIZE,
    height: Ti.UI.SIZE,
    color: '#43a047',
    touchEnabled: false
},

"#value[platform=android]": {
    right: '16dp',
    font: {fontSize: '16sp', fontWeight: 'normal'},
    color: '#43a047',
    zIndex: 5
}