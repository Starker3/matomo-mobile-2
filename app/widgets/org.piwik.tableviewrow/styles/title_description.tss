"TableViewRow": {
    height: Ti.UI.SIZE
},

"#row": {
    layout: 'vertical'
},

"#title": {
    textAlign: Ti.UI.TEXT_ALIGNMENT_LEFT,
    width: Ti.UI.SIZE,
    height: Ti.UI.SIZE,
    left: 10,
    right: 10,
    color: '#212121',
    ellipsize: true,
    maxLines: 1,
    font: {fontSize: 18, fontWeight: 'bold'},
    top: 11,
    touchEnabled: false,
},

"#title[platform=ios]": {
    left: 15,
}

"#title[platform=android]": {
    left: '16dp',
    right: '16dp',
    top: '10dp',
    font: {fontSize: '16sp', fontWeight: 'normal'},
    zIndex: 2,
},

"#description": {
    font: {fontSize: 13},
    textAlign: Ti.UI.TEXT_ALIGNMENT_LEFT,
    width: Ti.UI.SIZE,
    height: Ti.UI.SIZE,
    left: 10,
    right: 10,
    top: 4,
    bottom: 11,
    color: '#808080',
    ellipsize: true,
    maxLines: 1,
    touchEnabled: false,
},

"#description[platform=ios]": {
    left: 15,
}

"#description[platform=mobileweb]": {
    ellipsize: false,
    wordWrap: true
},

"#description[platform=android]": {
    font: {fontSize: '12sp'},
    left: '16dp',
    right: '16dp',
    top: '4dp',
    bottom: '10dp',
    ellipsize: false,
    wordWrap: true,
    zIndex: 3,
}